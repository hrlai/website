journal = {Environmental Research Letters},
keywords = {allometric scaling,arboriculture,decision support,tree inventory,tree management,tropics,urban forest},
number = {11},
pages = {114017},
title = {{Height–diameter allometry for the management of city trees in the tropics}},
volume = {15},
year = {2020}
