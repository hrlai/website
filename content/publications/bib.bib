journal = {Journal of Ecology},
keywords = {canopy gaps,community assembly,disturbance,environmental filtering,fourth corner,secondary succession,trait–environment interaction,windstorm},
pages = {1322--1333},
publisher = {John Wiley {\&} Sons, Ltd (10.1111)},
title = {{Functional traits that moderate tropical tree recruitment during post-windstorm secondary succession}},
