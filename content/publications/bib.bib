issn = {18791026},
journal = {Science of the Total Environment},
keywords = {Boundary layer,Gravitational sedimentation,Phytoremediation,Southeast Asia,Surface deposition velocity,Wind tunnel},
pages = {398--408},
publisher = {Elsevier B.V.},
title = {{Particulate matter mitigation via plants: Understanding complex relationships with leaf traits}},
url = {https://linkinghub.elsevier.com/retrieve/pii/S0048969719328360},
